<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <RelativeLayout
            android:id="@+id/hiddenentity_data_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp" >
            <TextView
                android:id="@+id/hiddenentity_id_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hiddenentity_id_label"/>
            <TextView
                android:id="@+id/hiddenentity_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:layout_below="@+id/hiddenentity_id_label" />
            <TextView
                android:id="@+id/hiddenentity_content_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hiddenentity_id"
                android:text="@string/hiddenentity_content_label"/>
            <TextView
                android:id="@+id/hiddenentity_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:layout_below="@+id/hiddenentity_content_label" />
        </RelativeLayout>
    </ScrollView>
    <TextView
        android:id="@+id/hiddenentity_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/hiddenentity_not_found" />
</RelativeLayout>
